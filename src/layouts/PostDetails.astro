---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import Datetime from "@components/Datetime";
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@utils/slugify";
import ShareLinks from "@components/ShareLinks.astro";
import getSessionKindLabel from "@utils/getSessionKindLabel";
import { resolveSessionOgImage } from "@utils/resolveSessionOgImage";

type ContentCollection = "posts" | "sessions";

export interface Props {
  post: CollectionEntry<ContentCollection> | CollectionEntry<"glossary">;
}

const { post } = Astro.props;

const {
  author,
  title = "",
  description,
  canonicalURL,
  ogImage,
  pubDatetime,
  modDatetime,
  tags = [],
} = post.data;

const publishedAt = (pubDatetime ?? new Date()) as Date;
const updatedAt = modDatetime ?? undefined;

const { Content } = await post.render();

const baseOgImage = typeof ogImage === "string" ? ogImage : ogImage?.src;
const isSession = post.collection === "sessions";
const sessionSlug =
  isSession && typeof post.data.slug === "string"
    ? post.data.slug
    : post.slug;
const sessionOgImage = isSession
  ? await resolveSessionOgImage(sessionSlug, baseOgImage)
  : undefined;

const ogImageUrl = sessionOgImage ?? baseOgImage;
const ogUrl = new URL(
  ogImageUrl ?? `/posts/${slugifyStr(title)}.png`,
  Astro.url.origin
).href;

const layoutProps = {
  title,
  author,
  description,
  pubDatetime: publishedAt,
  modDatetime: updatedAt,
  canonicalURL,
  ogImage: ogUrl,
  scrollSmooth: true,
};

const sessionNumber = isSession ? post.data.sessionNumber : undefined;
const sessionSpeakers = isSession ? post.data.speakers : undefined;
const sessionKind = isSession ? getSessionKindLabel(post.data.kind) : undefined;

const formatSingleSpeaker = (speaker?: {
  name?: string;
  affiliation?: string;
}) => {
  if (!speaker || !speaker.name) return null;
  return speaker.affiliation
    ? `${speaker.name} (${speaker.affiliation})`
    : speaker.name;
};

const formatSpeakers = (
  speakers?: { name?: string; affiliation?: string }[]
) => {
  if (!speakers || speakers.length === 0) return "AI-Phi";
  const formatted = speakers
    .map(formatSingleSpeaker)
    .filter(Boolean) as string[];
  if (!formatted.length) return "AI-Phi";
  if (formatted.length === 1) return formatted[0];
  if (formatted.length === 2) return `${formatted[0]} & ${formatted[1]}`;
  return `${formatted.slice(0, -1).join(", ")} & ${
    formatted[formatted.length - 1]
  }`;
};
---

<Layout {...layoutProps}>
  <Header />
  <div class="mx-auto flex w-full max-w-3xl justify-start px-2">
    <button
      class="focus-outline mb-2 mt-8 flex hover:opacity-75"
      onclick="history.back()"
    >
      <svg xmlns="http://www.w3.org/2000/svg"
        ><path
          d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
        ></path>
      </svg><span>Go back</span>
    </button>
  </div>
  <main id="main-content">
    <h1 transition:name={slugifyStr(title)} class="post-title">{title}</h1>
    <Datetime
      pubDatetime={publishedAt}
      modDatetime={updatedAt}
      size="lg"
      className="my-2"
    />
    {
      isSession && (
        <div class="mb-4 mt-1 space-y-1">
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-skin-base opacity-80">
            {sessionNumber ? `Session ${sessionNumber}` : "Session"}
            <span aria-hidden="true"> Â· </span>
            {sessionKind}
          </p>
          <p class="text-base font-medium text-skin-base opacity-80">
            {formatSpeakers(sessionSpeakers)}
          </p>
        </div>
      )
    }
    {
      author && (
        <p class="text-sm font-light italic opacity-80">
          <span class="sr-only">Author:</span>
          <span aria-hidden="true">By </span>
          <span class="not-italic font-normal">{author}</span>
        </p>
      )
    }
    <article id="article" role="article" class="prose mx-auto mt-8 max-w-3xl">
      <Content />
    </article>

    <ul class="my-8">
      {tags.map(tag => <Tag tag={slugifyStr(tag)} />)}
    </ul>

    <div
      class="flex flex-col-reverse items-center justify-between gap-6 sm:flex-row-reverse sm:items-end sm:gap-4"
    >
      <button
        id="back-to-top"
        class="focus-outline whitespace-nowrap py-1 hover:opacity-75"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="rotate-90">
          <path
            d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
          ></path>
        </svg>
        <span>Back to Top</span>
      </button>

      <ShareLinks />
    </div>
  </main>
  <Footer />
</Layout>

<style>
  main {
    @apply mx-auto w-full max-w-3xl px-4 pb-12 font-sans;
  }
  .post-title {
    @apply font-serif text-2xl font-semibold text-skin-accent;
  }

  .download-btn {
    @apply inline-flex items-center rounded-md bg-transparent px-3 py-1 text-sm text-skin-accent no-underline transition-colors;
  }

  .download-btn:hover {
    background-color: rgb(var(--color-accent)) !important;
    color: white !important;
    opacity: 1 !important;
  }

  /* Override prose hover styles for download button */
  .prose .download-btn:hover {
    background-color: rgb(var(--color-accent)) !important;
    color: white !important;
    opacity: 1 !important;
    text-decoration: none !important;
  }
</style>

<script is:inline>
  /** Attaches copy buttons to code blocks in the document,
   * allowing users to copy code easily. */
  function attachCopyButtons() {
    let copyButtonLabel = "Copy";
    let codeBlocks = Array.from(document.querySelectorAll("pre"));

    for (let codeBlock of codeBlocks) {
      let wrapper = document.createElement("div");
      wrapper.style.position = "relative";

      let copyButton = document.createElement("button");
      copyButton.className =
        "copy-code absolute right-3 -top-3 rounded bg-skin-card px-2 py-1 text-xs leading-4 text-skin-base font-medium";
      copyButton.innerHTML = copyButtonLabel;
      codeBlock.setAttribute("tabindex", "0");
      codeBlock.appendChild(copyButton);

      // wrap codebock with relative parent element
      codeBlock.parentNode.insertBefore(wrapper, codeBlock);
      wrapper.appendChild(codeBlock);

      copyButton.addEventListener("click", async () => {
        await copyCode(codeBlock, copyButton);
      });
    }

    async function copyCode(block, button) {
      let code = block.querySelector("code");
      let text = code.innerText;

      await navigator.clipboard.writeText(text);

      // visual feedback that task is completed
      button.innerText = "Copied";

      setTimeout(() => {
        button.innerText = copyButtonLabel;
      }, 700);
    }
  }
  attachCopyButtons();
  document.addEventListener("astro:after-swap", attachCopyButtons);

  /** Scrolls the document to the top when
   * the "Back to Top" button is clicked. */
  function backToTop() {
    document.querySelector("#back-to-top")?.addEventListener("click", () => {
      document.body.scrollTop = 0; // For Safari
      document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
    });
  }
  backToTop();
  document.addEventListener("astro:after-swap", backToTop);
</script>
