---
import type { CollectionEntry } from "astro:content";
import Datetime from "./Datetime";

export interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, description, ogImage, pubDatetime, modDatetime } = post.data;

// Get the og image URL
const ogImageUrl = typeof ogImage === "string" ? ogImage : ogImage?.src;
const postUrl = `/posts/${post.slug}`;
---

<div class="featured-post-pane">
  <a href={postUrl} class="featured-post-link">
    <div class="featured-post-content">
      {ogImageUrl && (
        <div class="featured-post-image">
          <img src={ogImageUrl} alt={title} loading="lazy" />
        </div>
      )}
      <div class="featured-post-text">
        <h2 class="featured-post-title">{title}</h2>
        <Datetime pubDatetime={pubDatetime} modDatetime={modDatetime} />
        {description && (
          <p class="featured-post-description">{description}</p>
        )}
        <div class="featured-post-cta">
          <span class="read-more">Read More</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="read-more-icon" viewBox="0 0 24 24">
            <path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"/>
          </svg>
        </div>
      </div>
    </div>
  </a>
</div>

<style>
  .featured-post-pane {
    @apply mx-auto mb-8;
    max-width: 58rem;
    margin-top: 3rem;
  }

  .featured-post-link {
    @apply block;
    text-decoration: none;
    color: inherit;
  }

  .featured-post-content {
    @apply relative overflow-hidden rounded-lg border border-skin-fill/20 bg-skin-card/5 p-6;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .featured-post-link:hover .featured-post-content {
    @apply border-skin-accent/30 bg-skin-card/10;
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .featured-post-image {
    @apply mb-4 overflow-hidden rounded-md;
    height: 200px;
  }

  .featured-post-image img {
    @apply h-full w-full object-cover;
    transition: transform 0.3s ease;
  }

  .featured-post-link:hover .featured-post-image img {
    transform: scale(1.05);
  }

  .featured-post-text {
    @apply space-y-3;
  }

  .featured-post-title {
    @apply text-2xl font-bold text-skin-accent;
    line-height: 1.3;
    margin: 0;
  }

  .featured-post-description {
    @apply text-skin-base text-base leading-relaxed;
    margin: 0;
    opacity: 0.9;
  }

  .featured-post-cta {
    @apply flex items-center gap-2 text-skin-accent;
    font-weight: 600;
    margin-top: 1rem;
  }

  .read-more {
    @apply text-sm;
  }

  .read-more-icon {
    @apply h-4 w-4;
    transition: transform 0.3s ease;
  }

  .featured-post-link:hover .read-more-icon {
    transform: translateX(4px);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .featured-post-pane {
      margin-top: 2rem;
      padding: 0 1rem;
    }

    .featured-post-content {
      @apply p-4;
    }

    .featured-post-image {
      height: 150px;
    }

    .featured-post-title {
      @apply text-xl;
    }

    .featured-post-description {
      @apply text-sm;
    }
  }

  /* Dark mode adjustments */
  html[data-theme="dark"] .featured-post-content {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  html[data-theme="dark"] .featured-post-link:hover .featured-post-content {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4);
  }
</style>
