---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import PostVerticalCard from "@components/blog/PostVerticalCard.astro";
import getSortedPosts, { getSortedByDateDesc } from "@utils/getSortedPosts";
import getKeywordMap from "@utils/getKeywordMap";
import { SOCIALS } from "@config";

const DEFAULT_OG_IMAGE = "/og/ai-phi-default-og.webp";
const posts = await getCollection("posts");
const sessions = await getCollection("sessions");

const sortedPosts = getSortedPosts(posts);
const sortedSessions = getSortedPosts(sessions);
const normalizeOgImage = (ogImage?: string | { src: string }) => {
  if (!ogImage) return undefined;
  if (typeof ogImage === "string") {
    if (ogImage.startsWith("http") || ogImage.startsWith("/")) return ogImage;
    return `/${ogImage}`;
  }
  return ogImage.src;
};
const getCardOgImage = (ogImage?: string | { src: string }) =>
  normalizeOgImage(ogImage) ?? DEFAULT_OG_IMAGE;
const featuredNonSessionPosts = sortedPosts
  .filter(({ data }) => data.featured)
  .slice(0, 2);
const featuredSessionPosts = getSortedByDateDesc(
  sortedSessions.filter(post => post.data.featured)
);

const socialCount = SOCIALS.filter(social => social.active).length;

// Get dynamic keywords from blog posts
const keywordMap = getKeywordMap([...posts, ...sessions]);
---

<Layout>
  <Header activeNav="home" />
  <main class="font-serif" id="main-content">
    <section id="hero" class="hero-section">
      <div class="hero-content">
        <!-- Logo positioned to float and allow text wrapping -->
        <div class="logo-container">
          <!-- Ring logos for background rotation -->
          <img
            src="/images/AiPhi_Logo_Black_Variante_Ring.png"
            alt=""
            class="hero-ring-logo light-ring"
          />
          <img
            src="/images/AiPhi_Logo_White_Variante_Ring.png"
            alt=""
            class="hero-ring-logo dark-ring"
          />

          <img
            src="/images/AiPhi_Logo_Black_Variante.png"
            alt="AI-PHI Logo"
            class="hero-logo light-logo"
          />
          <img
            src="/images/AiPhi_Logo_White_Variante.png"
            alt="AI-PHI Logo"
            class="hero-logo dark-logo"
          />
        </div>

        <div class="hero-text">
          <div class="hero-tagline">
            <p class="!text-2xl">
              AI-Phi is a Paris-based community of researchers and professionals united by a shared interest for the intersection of
              AI & Philosophy.
              <br /> 
              <b>Together, we track the big ideas that are shaping a rapidly changing world.</b>
            </p>
          </div>
          <!-- Keywords under description (randomly selected on each page load) -->
        <div class="keywords-under-description">
          <!-- General categories (always shown) -->
          <div class="subtitle-section general-categories">
            <!-- <h3 class="text-2xl text-left"> <b>Session Type:</b> -->
            {keywordMap.generalCategories.map((keyword, index) => (
              <>
                <a href={`/tags/${keyword.tag}`} class="glitch-container" data-text={keyword.tagName}>
                  <span>{keyword.tagName}</span>
                </a>
                {index < keywordMap.generalCategories.length - 1 && <span class="dot">·</span>}
              </>
            ))}
            <!-- </h3> -->
          </div>

          <!-- Random themes -->
          <div class="subtitle-section random-themes">
            <!-- <h3 class="text-2xl text-left"> <b>Browse Randomly:</b> -->
            {keywordMap.randomThemes.map((keyword, index) => (
              <>
                <a href={`/tags/${keyword.tag}`} class="glitch-container" data-text={keyword.tagName}>
                  <span>{keyword.tagName}</span>
                </a>
                {index < keywordMap.randomThemes.length - 1 && <span class="dot">·</span>}
              </>
            ))}
            <!-- </h3> -->
          </div>
        </div>
        </div>

        

        <section class="mt-10" aria-labelledby="featured-posts-heading">
          <div class="space-y-4">
            <h2
              id="featured-posts-heading"
              class="text-3xl font-semibold uppercase tracking-tight text-skin-base"
            >
              Featured Posts
            </h2>
            {featuredNonSessionPosts.length > 0 ? (
              <div class="grid gap-6 items-stretch md:grid-cols-2">
                {featuredNonSessionPosts.map(({ data, slug }) => (
                  <PostVerticalCard
                    title={data.title}
                    date={data.pubDatetime}
                    author={data.author}
                    description={data.description}
                    ogImage={getCardOgImage(data.ogImage)}
                    href={`/posts/${slug}`}
                  />
                ))}
              </div>
            ) : (
              <p class="text-base text-skin-base opacity-80">
                Stay tuned for selected highlights from the community.
              </p>
            )}
          </div>
        </section>
  
        <section id="all-posts" class="hero-section">
          <div class="all-posts-btn-wrapper">
            <LinkButton href="/posts" className="all-posts-button">
              Browse all posts
              <svg xmlns="http://www.w3.org/2000/svg"
                ><path
                  d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
                ></path>
              </svg>
            </LinkButton>
          </div>
        </section>

        <section class="mt-12" aria-labelledby="sessions-announcement-heading">
          <div class="space-y-4">
            <h2
              id="sessions-announcement-heading"
              class="text-3xl font-semibold uppercase tracking-tight text-skin-base"
            >
              Sessions Announcement
            </h2>
            {featuredSessionPosts.length > 0 ? (
              <div class="grid gap-6 items-stretch md:grid-cols-2">
                {featuredSessionPosts.map(({ data, slug }) => (
                  <PostVerticalCard
                    title={data.title}
                    date={data.pubDatetime}
                    author={data.author}
                    description={data.description}
                    ogImage={getCardOgImage(data.ogImage)}
                    href={`/posts/${slug}`}
                  />
                ))}
              </div>
            ) : (
              <p class="text-base text-skin-base opacity-80">
                No sessions announcements at the moment — check back soon.
              </p>
            )}
          </div>
        </section>

    
    <!-- Browse all sessions -->
    <section id="all-posts" class="hero-section">
      <div class="all-posts-btn-wrapper">
        <LinkButton href="/sessions" className="all-posts-button">
          Browse all sessions
          <svg xmlns="http://www.w3.org/2000/svg"
            ><path
              d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
            ></path>
          </svg>
        </LinkButton>
      </div>
    </section>
  </main>

  <Footer showIcons={false} />
</Layout>

