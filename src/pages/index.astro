  .hero-text span {
    @apply whitespace-nowrap;
  }
  /* 
  # cursor got inspiration from https://muffinman.io/blog/css-image-glitch/
  # thank you muffinman! */

  .glitch-container {
    @apply relative inline-flex items-center justify-center;
    /* overflow: hidden; */
    /* Ultra-minimal padding for maximum compactness */
    font-weight: normal; /* Remove bold styling */

    line-height: 0.9; /* Extra tight line height */
    vertical-align: middle; /* Align with dots */
    margin: 0; /* Remove any default margins */
    height: 1.2em;

    @media (min-width: 480px) {
      font-size: 1.1rem; /* 32px on larger mobile */
    }

    /* Touch-friendly on mobile with slightly larger touch area */
    @media (min-width: 640px) {
      font-size: 1.4rem;
    }

    @media (max-width: 768px) {
      font-size: 1.4rem;
    }

    @media (min-width: 1024px) {
      font-size: 1.4rem;
    }
  }

   .glitch-container > span {
     transition: opacity 100ms ease-in-out;
   }

  .glitch-container.glitch-active > span {
    opacity: 0.75; /* Keep base text visible while giving strips more presence */
  }

  /* Bold only during active glitch for painterly emphasis */
  .glitch-container.glitch-active {
    font-weight: 700;
  }

  .glitch-strip {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeSpeed;
    font-smooth: never;
    outline: none;
    border: none;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    mix-blend-mode: multiply;
    transition: opacity 800ms ease-in-out;
  }

  .glitch-strip.fade-out {
    opacity: 0;
  }

  /* Painterly/Logo-style soft flow */
  @keyframes logo-like-flow {
    0% {
      transform: translateX(0) translateY(0) rotate(0deg);
      filter: blur(0.25px) saturate(1.04);
      opacity: 0.42;
    }
    25% {
      transform: translateX(var(--glitch-x-1)) translateY(0) rotate(0.6deg);
      filter: blur(0.35px) saturate(1.06);
      opacity: 0.44;
    }
    50% {
      transform: translateX(calc((var(--glitch-x-1) + var(--glitch-x-2)) / 2)) translateY(0) rotate(1deg);
      filter: blur(0.45px) saturate(1.08);
      opacity: 0.46;
    }
    75% {
      transform: translateX(var(--glitch-x-2)) translateY(0) rotate(0.6deg);
      filter: blur(0.35px) saturate(1.06);
      opacity: 0.44;
    }
    100% {
      transform: translateX(0) translateY(0) rotate(0deg);
      filter: blur(0.25px) saturate(1.04);
      opacity: 0.42;
    }
  }

  /* Generate multiple glitch animations with stronger chromatic aberration */
  @keyframes glitch-text-strip {
    0% {
      transform: none;
      color: var(--glitch-text-color);
      opacity: 35%; /* slightly stronger base to avoid vanishing */
    }
    50% {
      transform: translateX(var(--glitch-x-1)) translateY(0);
      color: var(--glitch-text-color);
      opacity: 28%;
    }
    100% {
      transform: translateX(var(--glitch-x-2)) translateY(0);
      color: var(--glitch-text-color);
      opacity: 35%;
    }
  }

  @keyframes glitch-red-blue {
    0% {
      transform: translateX(0) translateY(0);
      color: var(--glitch-text-color);
    }
    35% {
      transform: translateX(var(--glitch-x-1)) translateY(0);
      text-shadow:
        1px 0px 2px rgba(var(--glitch-warm-1), 0.45),
        -1px 0px 2px rgba(var(--glitch-warm-2), 0.35),
        0px 0px 6px rgba(var(--glitch-warm-1), 0.20);
      filter: blur(0.4px) saturate(1.05) contrast(1.05);
      color: var(--glitch-text-color);
    }
    75%, 85% {
      transform: translateX(var(--glitch-x-2)) translateY(0);
      text-shadow:
        1px 0px 2px rgba(var(--glitch-warm-1), 0.45),
        -1px 0px 2px rgba(var(--glitch-warm-2), 0.35),
        0px 0px 6px rgba(var(--glitch-warm-2), 0.18);
      filter: blur(0.4px) saturate(1.05) contrast(1.05);
      color: var(--glitch-text-color);
    }
    100% {
      transform: translateX(var(--glitch-x-2)) translateY(0);
      text-shadow:
        1px 0px 2px rgba(var(--glitch-warm-1), 0.12),
        -1px 0px 2px rgba(var(--glitch-warm-2), 0.10),
        0px 0px 4px rgba(var(--glitch-warm-1), 0.10);
      filter: blur(0.25px) saturate(1.02) contrast(1.02);
      color: var(--glitch-text-color);
    }
  }

  @keyframes glitch-pink-yellow {
    0% {
      transform: translateX(0) translateY(0);
      filter: hue-rotate(0);
      color: var(--glitch-text-color);
    }
    35% {
      transform: translateX(var(--glitch-x-1)) translateY(0);
      text-shadow:
        1px 0px 2px rgba(var(--glitch-cool-1), 0.45),
        -1px 0px 2px rgba(var(--glitch-cool-2), 0.35),
        0px 0px 6px rgba(var(--glitch-cool-1), 0.20);
      filter: blur(0.4px) saturate(1.05) contrast(1.05);
      color: var(--glitch-text-color);
    }
    90% {
      transform: translateX(var(--glitch-x-2)) translateY(0);
      text-shadow:
        1px 0px 2px rgba(var(--glitch-cool-1), 0.45),
        -1px 0px 2px rgba(var(--glitch-cool-2), 0.35),
        0px 0px 6px rgba(var(--glitch-cool-2), 0.18);
      filter: blur(0.4px) saturate(1.05) contrast(1.05);
      color: var(--glitch-text-color);
    }
    100% {
      transform: translateX(var(--glitch-x-2)) translateY(0);
      text-shadow:
        1px 0px 2px rgba(var(--glitch-cool-1), 0),
        -1px 0px 2px rgba(var(--glitch-cool-2), 0),
        0px 0px 4px rgba(var(--glitch-cool-1), 0);
      filter: blur(0.25px) saturate(1.02) contrast(1.02);
      color: var(--glitch-text-color);
    }
  }

  @keyframes glitch-text-hole {
    0% {
      transform: none;
      color: var(--glitch-text-color);
      opacity: 0%;
    }
    25% {
      color: var(--glitch-text-color);
      opacity: 0%;
    }
    75% {
      color: var(--glitch-text-color);
      opacity: 0%;
    }
    100% {
      color: var(--glitch-text-color);
      opacity: 0%;
