---
interface Props {
  active: "all" | "seminar" | "causerie" | "other";
}

const { active } = Astro.props as Props;

const navItems = [
  { label: "All sessions", href: "/sessions", key: "all" },
  { label: "Seminar series", href: "/sessions/seminar-series", key: "seminar" },
  { label: "Causeries", href: "/sessions/causerie", key: "causerie" },
  { label: "Other sessions", href: "/sessions/other", key: "other" },
];
---

<nav
  class="mb-10 flex flex-wrap gap-3"
  aria-label="Sessions navigation"
>
  {navItems.map(({ label, href, key }) => {
    const isActive = active === key;
    return (
      <a
        href={href}
        aria-current={isActive ? "page" : undefined}
        class={`inline-flex items-center rounded-full border px-4 py-2 text-sm font-medium transition-colors ${
          isActive
            ? "border-skin-line/60 bg-[rgb(var(--color-card-muted))] text-skin-base font-semibold"
  : "border-skin-line/60 text-skin-base hover:bg-[rgb(var(--color-card-muted))] hover:font-semibold"
        }`}
      >
        {label}
      </a>
    );
  })}
</nav>
